<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h4>Personal Info</h4>
  <div class="row">
    <div class="col-xs-6">
      <%= f.input :first_name %>
    </div>
    <div class="col-xs-6">
      <%= f.input :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :email, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'envelope' %></div>
        <%= f.input_field :email, class: 'form-control', required: true %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :phone_number, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'phone' %></div>
        <%= f.input_field :phone_number, class: 'form-control', value: f.object.phone %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :birthdate, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'birthday-cake' %></div>
        <%= f.input_field :birthdate, as: :bootstrap_datepicker %>
      <% end %>
    </div>
  </div>

  <%= f.simple_fields_for :address do |address| %>
    <h4>Shipping Address</h4>
    <%= render partial: 'shared/address_form', locals: { f: address } %>
  <% end %>

  <hr>

  <%= f.button :submit, 'Update Info', class: 'btn-primary' %>
<% end %>

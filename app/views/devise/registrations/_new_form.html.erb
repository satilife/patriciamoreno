<h4 class="title">Using your account</h4>
<%= render 'shared/record_errors', record: resource %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xs-6">
      <%= f.input :first_name, placeholder: 'First name' %>
    </div>
    <div class="col-xs-6">
      <%= f.input :last_name, placeholder: 'Last name' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :email, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'envelope' %></div>
        <%= f.input_field :email, placeholder: 'Email address', class: 'form-control', required: true %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :password, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'key' %></div>
        <%= f.input_field :password, class: 'form-control', autocomplete: :off, placeholder: 'Enter password' %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :password_confirmation, wrapper: :input_group do %>
        <div class="input-group-addon"><%= fa_icon 'key' %></div>
        <%= f.input_field :password_confirmation, class: 'form-control', autocomplete: :off, placeholder: 'Enter password' %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Sign up', class: 'btn btn-primary' %>
  </div>

  <hr>

  <p>Already have an account? <%= link_to 'Log in', new_user_session_path %>
<% end %>

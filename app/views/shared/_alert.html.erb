<%# Alert control from Bootstrap framework for public pages %>
<div class="alert alert-<%= css_class %> alert-dismissable" role="alert">
  <div class="container">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <div class="alert-message"><%= sanitize(message).html_safe %></div>
  </div>
</div>
